token {
   # AUTH_SERVICE_TOKEN_TIMEOUT
   # Timeout in seconds:
   timeout = 3600 #1h
}

db {
  # AUTH_SERVICE_DB_HOST
  host = "localhost"
  # AUTH_SERVICE_DB_DATABASE
  database = "auth-service"
  # AUTH_SERVICE_DB_USER
  # user = "auth-service"
  # AUTH_SERVICE_DB_PASSWORD
  # password = "password"
}

otp {
  # AUTH_SERVICE_OTP_LENGTH
  # generated One Time Password length
  length = 8
  # AUTH_SERVICE_OTP_TIMEOUT
  # One Time Password timeout in seconds
  timeout = 300 # 5 minutes
}

twilio {
  # AUTH_SERVICE_TWILIO_ACCOUNT
  # Twilio account SID
  account = ""
  # AUTH_SERVICE_TWILIO_TOKEN
  # Twilio Authentication Token
  token = ""
  # AUTH_SERICE_TWILIO_SOURCE
  # Source number for sms
  source = ""
}
