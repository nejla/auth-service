User
  uuid UserID
  Primary uuid
  email Email
  UniqueUserEmail email
  name Name
  passwordHash PasswordHash
  phone Phone Maybe

Instance
  uuid InstanceID
  Primary uuid
  name Text
  UniqueInstanceName name

UserOtp
  user UserID
  Foreign User fkUSer user
  password Password
  created UTCTime

UserInstance
  user UserID
  Foreign User fkUser user
  instanceId InstanceID
  Foreign Instance fkInstance instanceId
  Primary user instanceId

Token
  token B64Token
  Primary token
  user UserID
  Foreign User fkUser user
  created UTCTime
  expires UTCTime Maybe

Log
  time UTCTime
  message Text
  details Value sqltype=jsonb